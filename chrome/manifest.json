{
  "manifest_version": 2,
 
  "name": "YouTube Large Notification",
  "description": "Enlarge YouTube notification area",
  "version": "1.0",
 
  "browser_action": {
    "default_icon": "youtube.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "http://www.youtube.com/*",
    "https://www.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://www.youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
